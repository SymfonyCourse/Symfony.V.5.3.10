{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ma première page Symfony</h1>
    Bonjour cher/chère {{nom | raw}}  
    Vous avez {{age}} ans !
</div>
<div class="example-wrapper">
{% set fruits = [
    { name: 'Apples', quantity: 5 },
    { name: 'Oranges', quantity: 2 },
    { name: 'Grapes', quantity: 4 },
] %}

<table border="1">
<tr><th>Fruit name</th><th>Quantity</th></tr>

{%  for fruit in fruits|sort((fruit)=>fruit.quantity) %}
 <tr><td>{{ fruit.name}}</td><td>{{fruit.quantity}}</td></tr>
{% endfor %}
</table>

{#{ 'WELCOME'|lower|capitalize }} {#affiche Welcome #}
{% endblock %}
